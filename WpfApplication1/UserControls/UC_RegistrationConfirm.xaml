<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="WpfApplication1.UC_RegistrationConfirm"
             mc:Ignorable="d" 

             d:DesignHeight="300" d:DesignWidth="300" Background="White" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <StackPanel x:Name="panel_Registration" Orientation="Vertical" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Name="text_Info" Text="На ваш номер был отправлен код подтверждения." Margin="0,0,0,25" FontSize="10" HorizontalAlignment="Center"/>
            <TextBlock Name="text_InsertCode" Text="Введите код:" HorizontalAlignment="Center"/>
            <TextBox Name="tb_Code" Margin="50,0" TextAlignment="Center" MaxWidth="500"/>
            <Button Name="b_Confirm" Content="Подтвердить" Margin="100,25,100,0" MaxWidth="350"/>
        </StackPanel>
    </Grid>
</UserControl>
